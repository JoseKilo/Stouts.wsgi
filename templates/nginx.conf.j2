upstream uwsgi-{{wsgi_nginx_servernames.split(' ')[0]}} {
  {% if wsgi_uwsgi_socket.startswith('/') %}
  server unix://{{wsgi_uwsgi_socket}};
  {% elif wsgi_uwsgi_socket.startswith(':') -%}
  server localhost{{wsgi_uwsgi_socket}};
  {% else -%}
  server {{wsgi_uwsgi_socket}};
  {% endif -%}
}

{% if wsgi_nginx_redirect_www %}
# Rewrite www.domain.zone -> domain.zone
{% for sn in wsgi_nginx_servernames.split(' ') %}{% if sn.split('.')|length == 2 %}
server {
    listen     {{wsgi_nginx_port}};
    server_name www.{{sn}};
    rewrite ^(.*) $scheme://{{sn}}$1 permanent;
}
{% endif %}{% endfor %}
{% endif %}

{% if wsgi_nginx_ssl_redirect %}
# Redirect to SSL
server {
    listen {{wsgi_nginx_port}};
    server_name {{wsgi_nginx_servernames}};
    rewrite ^(.*) https://$server_name$1 permanent;
}
{% endif %}

server {

    listen     {{wsgi_nginx_port if not wsgi_nginx_ssl else wsgi_nginx_ssl_port}};
    server_name {{wsgi_nginx_servernames}};

    {% if wsgi_nginx_ssl and wsgi_nginx_ssl_crt and wsgi_nginx_ssl_key -%}
    ssl on;
    ssl_protocols   SSLv3 TLSv1;
    ssl_certificate {{wsgi_nginx_ssl_crt}};
    ssl_certificate_key {{wsgi_nginx_ssl_key}};   
    {% endif %}

    access_log {{wsgi_nginx_access_log|default('off')}};
    error_log {{wsgi_log_dir}}/nginx-errors.log;

    charset utf-8;
    client_max_body_size 15M;
    expires off;
    gzip on;

    location / {
        expires off;
        include uwsgi_params;
        uwsgi_pass uwsgi-{{wsgi_nginx_servernames.split(' ')[0]}};
        proxy_set_header  X-Real-IP  $remote_addr;
        proxy_set_header Host $http_host;
    }

{% for location in wsgi_nginx_static_locations %}
    location {{location}} {
        access_log off;
        root {{wsgi_src_dir}};
        expires max;
    }
{% endfor %}

{% for option in wsgi_nginx_options %}
    {{option}}
{% endfor %}

}
