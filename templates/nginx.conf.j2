upstream uwsgi-{{wsgi_nginx_hostname}} {
  server unix://{{wsgi_run_dir}}/uwsgi.sock;
}

server {

    listen     {{wsgi_nginx_port}};
    server_name {{wsgi_nginx_hostname}};

    access_log {{wsgi_log_dir}}/nginx.log;
    error_log {{wsgi_log_dir}}/nginx-errors.log;

    charset utf-8;
    client_max_body_size 15M;
    expires off;
    gzip on;

{% for location in wsgi_nginx_static_locations %}
    location {{location}} {
        root {{wsgi_app_dir}};
        expires max;
    }
{% endfor %}
{% for option in wsgi_nginx_options %}
    {{option}}
{% endfor %}

    location / {
        expires off;
        include uwsgi_params;
        uwsgi_pass uwsgi-{{wsgi_nginx_hostname}};
        proxy_set_header  X-Real-IP  $remote_addr;
        proxy_set_header Host $http_host;
    }

}
