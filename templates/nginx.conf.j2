# This file was generated by Ansible for {{ ansible_fqdn }}
# Do NOT modify this file by hand!

{%- set socket = item.socket|default(wsgi_run_dir + '/' + item.name) %}
{%- set servernames = item.nginx_servernames|default(inventory_hostname) %}
{%- set port = item.nginx_port|default(wsgi_nginx_port) %}
{%- set ssl = item.ssl|default(wsgi_nginx_ssl) %}

upstream uwsgi-{{item.name}} {
{% if socket.startswith('/') %}
  server unix://{{socket}};
{% elif socket.startswith(':') -%}
  server localhost{{socket}};
{% else -%}
  server {{socket}};
{% endif -%}
}

{% if wsgi_nginx_redirect_www %}
# Rewrite www.domain.zone -> domain.zone
{% for sn in servernames.split(' ') %}{% if sn.split('.')|length == 2 %}
server {
    listen     {{port}};
    server_name www.{{sn}};
    rewrite ^(.*) $scheme://{{sn}}$1 permanent;
}
{% endif %}{% endfor %}
{% endif %}

{% if item.nginx_ssl_redirect|default(wsgi_nginx_ssl_redirect) %}
# Redirect HTTP to SSL
server {
    listen {{port}};
    server_name {{servernames}};
    rewrite ^(.*) https://$host$1 permanent;
}
{% endif %}

server {

    listen     {{port if not ssl else wsgi_nginx_ssl_port}};
    server_name {{servernames}};

{% if ssl and wsgi_nginx_ssl_crt and wsgi_nginx_ssl_key -%}
    ssl on;
    ssl_protocols   SSLv3 TLSv1;
    ssl_certificate {{wsgi_nginx_ssl_crt}};
    ssl_certificate_key {{wsgi_nginx_ssl_key}};   
{% endif %}

    access_log {{item.nginx_access_log|default(wsgi_log_dir + '/' + item.name + '-access.log')}};
    error_log {{item.nginx_error_log|default(wsgi_log_dir + '/' + item.name + '-error.log')}};

    charset utf-8;
    client_max_body_size 15M;
    expires off;
    gzip on;

    location / {
        expires off;
        include uwsgi_params;
        uwsgi_pass uwsgi-{{item.name}};
        proxy_set_header  X-Real-IP  $remote_addr;
        proxy_set_header Host $http_host;
    }

{% for location in item.nginx_static_locations|default(wsgi_nginx_static_locations) %}
    location {{location}} {
        access_log off;
        root {{item.nginx_static_root|default(wsgi_nginx_static_root)}};
        expires max;
    }
{% endfor %}

{% for option in item.nginx_options|default(wsgi_nginx_options) %}
    {{option}}
{% endfor %}

}
