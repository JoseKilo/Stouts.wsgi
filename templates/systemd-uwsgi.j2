{% set app = item -%}

[Unit]
Description=uWSGI Instance to serve {{ app.name }}
After=syslog.target

[Service]
Environment={% for key in app.env|default({}) %}'{{key}}={{app.env[key]}}' {% endfor %}
WorkingDirectory={{app.app_dir|default(wsgi_app_dir)}}
User={{wsgi_user}}
ExecStart={{app.virtualenv|default(wsgi_virtualenv)}}/bin/uwsgi --ini {{app.etc_dir|default(wsgi_etc_dir)}}/{{app.name}}-uwsgi.ini
Restart=always
KillSignal=SIGQUIT

[Install]
WantedBy=multi-user.target
